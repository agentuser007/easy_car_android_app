<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <!--<ImageView
        android:id="@+id/lmi_avatar"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/app_name"
        tools:background="#fff0f0f0"/>
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:background="@drawable/shape_grey">

        <TextView
            android:id="@+id/vio_isHandle"
            style="@style/AppTheme.Label"
            android:layout_marginTop="5dp"
            android:minWidth="200dp"
            android:textSize="18sp"
            tools:background="#fff0f0f0" />


        <TextView style="@style/AppTheme.Label"
            android:id="@+id/vio_time"
            android:minWidth="100dp"
            android:layout_marginTop="5dp"
            tools:background="#fff0f0f0"/>

        <TextView style="@style/AppTheme.Label"
            android:id="@+id/vio_location"
            android:minWidth="100dp"
            android:layout_marginTop="5dp"
            tools:background="#fff0f0f0"/>

        <TextView style="@style/AppTheme.Label"
            android:id="@+id/vio_info"
            android:minWidth="100dp"
            android:layout_marginTop="5dp"
            tools:background="#fff0f0f0"/>
        <TextView style="@style/AppTheme.Label"
            android:id="@+id/vio_punish"
            android:minWidth="100dp"
            android:layout_marginTop="5dp"
            tools:background="#fff0f0f0"/>

    </LinearLayout>

</LinearLayout>

