<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.DashboardFragment">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints" >

    </com.youth.banner.Banner>


    <LinearLayout
        android:layout_marginTop="@dimen/sp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_grey"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/sp_14"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="常用功能"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/car_inspection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp">

                <com.flyco.roundview.RoundFrameLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:rv_backgroundColor="#CE4CE4"
                    app:rv_isRadiusHalfHeight="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_10"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@drawable/safe_ic"
                        tools:ignore="VectorDrawableCompat" />
                </com.flyco.roundview.RoundFrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="10dp"
                    android:text="办年检"
                    android:textSize="14sp" />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/car_vio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp">

                    <com.flyco.roundview.RoundFrameLayout
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:rv_backgroundColor="#FF5722"
                        app:rv_isRadiusHalfHeight="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/search_ic"
                            tools:ignore="VectorDrawableCompat" />
                    </com.flyco.roundview.RoundFrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="10dp"
                        android:text="查违章"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/car_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp">

                    <com.flyco.roundview.RoundFrameLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:rv_backgroundColor="#00BCD4"
                        app:rv_isRadiusHalfHeight="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_10"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/light_ball_ic"
                            tools:ignore="VectorDrawableCompat" />
                    </com.flyco.roundview.RoundFrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="违章热点"
                        android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>